# Bluesky Labeler Configuration

APP_NAME=labeler

# Labeler Account Credentials
LABELER_DID=did:plc:REPLACE_WITH_YOUR_LABELER_DID
LABELER_DOMAIN=REPLACE_WITH_YOUR_DOMAIN.com 

# SECRETS - DO NOT COMMIT TO VERSION CONTROL
# Add these manually after running setup:
# LABELER_PASSWORD=your_bluesky_account_password
# SIGNING_KEY=generated_by_setup_or_generate_signing_key_command

# Optional: Custom database path
DB_PATH=./labels.db

# Required: Main labeler server port
PORT=8080
INTERNAL_API_PORT=8081

# Optional: Node environment (development/production)
NODE_ENV=development
